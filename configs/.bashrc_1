
[[ $- != *i* ]] && return
PS1='[\W] > '

xmodmap -e "pointer = 1 2 3" > /dev/null 2>&1

n(){
	if [[ "${NNNLVL:-0}" -ge 1 ]]; then
		echo "nnn is already running"
		return
	fi

	export NNN_TMPFILE="${XDG_CONFIG_HOME:-$HOME/.config}/nnn/.lastd"

	nnn -Read "$@"

	if [ -f "$NNN_TMPFILE" ]; then
		. "$NNN_TMPFILE"
		rm -f "$NNN_TMPFILE" > /dev/null
	fi
}

function vidtrim(){
	if [ "$3" == "-" ]; then
		ffmpeg -i "$1" -to "$4" -c:v copy -c:a copy "$2"
	elif [ "$4" == "-" ]; then
		ffmpeg -i "$1" -ss "$3" -c:v copy -c:a copy "$2"
	else
		ffmpeg -i "$1" -ss "$3" -to "$4" -c:v copy -c:a copy "$2"
	fi
}

export PATH="$HOME/.cargo/bin:$PATH"
export FZF_DEFAULT_COMMAND="find"
export EDITOR=nvim
export NNN_BMS='b:bookmarks;p:~/Pictures;d:~/Downloads;c:~/.config;D:~/Documents;v:~/Videos'
export NNN_PLUG='f:fzcd;o:fzopen;p:preview-tui;i:imgview'
export NNN_FCOLORS='696969696969696969696969'
export NNN_COLORS='#6969696969'

alias ls='ls --color=auto'
alias cl='clear'
alias neo='neofetch'
alias uwu='uwufetch'
alias syspo='systemctl poweroff'
alias sysrb='systemctl reboot'
alias vidsave='yt-dlp -f "bestvideo[ext=mp4]+bestaudio[ext=m4a]/best[ext=mp4]/best"'

bind -x '"\C-s":"tfind"'
bind -x '"\C-y":"pfind"'
bind -x '"\C-o":"nvim ."'
bind -x '"\C-v":"n"'

if [[ $(ps --no-header --pid=$PPID --format=comm) != "fish" && -z ${BASH_EXECUTION_STRING} ]]
then
	shopt -q login_shell && LOGIN_OPTION='--login' || LOGIN_OPTION=''
	exec fish $LOGIN_OPTION
fi
